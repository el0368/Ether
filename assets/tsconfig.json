{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "types": ["vitest/globals"],
    "paths": {
      "$lib/*": ["./svelte/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["svelte/**/*.svelte", "js/**/*.js", "tests/**/*.ts"],
  "exclude": ["node_modules"]
}
