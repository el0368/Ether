{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Ether",
    "version": "0.1.0",
    "identifier": "com.ether.app",
    "build": {
        "beforeDevCommand": "bun run --cwd assets dev",
        "devUrl": "http://localhost:5173",
        "beforeBuildCommand": "bun run --cwd assets build",
        "frontendDist": "../priv/static"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "label": "main",
                "title": "Ether",
                "width": 1200,
                "height": 800,
                "decorations": false,
                "transparent": false,
                "visible": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.png"
        ]
    }
}